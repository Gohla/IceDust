module pp

imports

  libstratego-gpp
  runtime/refactoring/-
  pp/icedust2-parenthesize
  pp/icedust2-pp
  prettyprinting/pp

rules

  editor-format:
    (node, _, ast, path, project-path) -> (filename, result)
    with
      ext      := <get-extension> path
    ; filename := <guarantee-extension(|$[pp.[ext]])> path
    ; result   := <pp-debug> node
