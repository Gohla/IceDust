module Rules

imports
	Common
	Expressions
	Types
	Model
	
context-free syntax

	Rule.Rule = <
		<ID> (<{Param ","}*>) :
			<{GraphPart "\n"}*>
		-\>
			<{GraphPart "\n"}*>
	>

	Param.Param = <<EntityRef> <ID>>
	
	GraphPart.Node			= <<ID>.>												// node var
	GraphPart.TypedNode	= <<EntityRef> <ID>.>						// type, node var
	GraphPart.Edge			= <<Var> <ID> <Var>.>	// node var, role/inverse name, node var
	
	// RoleOrInverse.RoleOrInverse = <<ID>>
	Var.Var = <<ID>>