module Rules

imports
	Common
	Expressions
	Types
	Model
	
templates

	Rule.Rule = <
		<ID> (<Param*;separator=",">) :
			<GraphPart*;separator="\n">
		-\>
			<GraphPart*;separator="\n">
	>

	Param.Param = <<EntityRef> <ID>>
	
	GraphPart.Node			= <<ID>.>												// node var
	GraphPart.TypedNode	= <<EntityRef> <ID>.>						// type, node var
	GraphPart.Edge			= <<ID> <RoleOrInverse> <ID>.>	// node var, role/inverse name, node var
	
	RoleOrInverse.RoleOrInverse = <<ID>>
